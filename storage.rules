rules_version = '2';

// Craft rules based on data in your Firebase Storage bucket
service firebase.storage {
  match /b/{bucket}/o {
    // السماح للمستخدمين المسجلين بتحميل الملفات الشخصية
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // السماح للجميع بقراءة الملفات العامة
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // السماح للجميع بقراءة الصور والملفات العامة للتطبيق
    match /app/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // السماح للجميع بقراءة صور الأخبار
    match /news/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
