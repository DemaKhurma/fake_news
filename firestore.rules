rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // السماح لأي مستخدم مسجل دخوله يقرأ ويكتب بياناته الخاصة
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // السماح للجميع بقراءة البيانات العامة، والكتابة فقط للمسجلين
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // تحليلات الأخبار - القراءة للجميع، الكتابة فقط من Firebase Functions
    match /news_analyses/{analysisId} {
      allow read: if true;
      allow write: if false; // فقط Firebase Functions يمكنها الكتابة
      allow create: if request.auth != null; // السماح للمستخدمين بإنشاء تحليلات جديدة
    }

    // الإحصائيات العامة - القراءة للجميع، الكتابة للمسجلين فقط
    match /analytics/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // المواقع الموثوقة - القراءة للجميع، الكتابة للمسجلين فقط
    match /trusted_sites/{siteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // إعدادات التطبيق - القراءة للجميع، الكتابة للمسجلين فقط
    match /app_settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // سجل الأخطاء - القراءة للمسجلين فقط، الكتابة للجميع
    match /error_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if true;
    }
  }
}